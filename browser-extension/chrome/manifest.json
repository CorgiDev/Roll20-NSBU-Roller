{
    "name": "NSBU Tracker",
    "description": "An extension to help with tracking stats during a Never Stop Blowing Up (NSBU) game and send messages / rolls in Roll20.",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
      "service_worker": "scripts/background.js",
      "type": "module"
    },
    "action": {
      "default_title": "Click to open panel",
      "default_icon": "nsbu_extensions.png",
      "default_popup": "sidePanel.html"
    },
    "side_panel": {
      "default_path": "sidePanel.html"
    },
    "content_scripts": [
      {
        "matches": [
          "https://*.roll20.net/*"
        ],
        "js": [
          "scripts/nsbu.js",
          "scripts/lightSwitch.js",
          "scripts/tabs.js",
          "scripts/characterCSV.js"
        ],
        "css": [
          "styles/normalize.css",
          "styles/main.css",
          "styles/sidePanel.css",
          "styles/light.css",
          "styles/dark.css",
          "styles/tablist.css"
        ]
      }
    ],
    "permissions": [
      "tabs",
      "clipboardWrite",
      "storage",
      "activeTab",
      "scripting",
      "sidePanel"
    ],
    "host_permissions": [
      "https://app.roll20.net/editor",
      "https://app.roll20.net/*",
      "http://*/*",
      "https://*/*"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';",
        "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' 'unsafe-inline' 'unsafe-eval'; child-src 'self';"
    }
  }